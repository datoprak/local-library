<%- include("partials/head.ejs") -%>
  <body>
    <%- include("partials/navbar.ejs") -%>
    <h1><%= title %>: <%= genre.name %></h1>
    
    <% if(allBooksInGenre.length > 0) { %>
      <p><strong>Delete the following books before attempting to delete this genre.</strong></p>
      <div style="margin-left: 20px; margin-top: 20px;">
        <h4>Books</h4>
        <dl>
          <% allBooksInGenre.forEach(book => { %>
            <dt>
              <a href="<%= book.url %>"><%= book.title %></a>
            </dt>
            <dd><%= book.summary %></dd>
            <% }) %>
        </dl>
      </div>
      <% } else { %>
      <p>Do you really want to delete this genre?</p>
      <form action="" method="POST">
        <div class="form-group">
          <input type="hidden" id="id" class="form-control" name="id" required value="<%= genre._id %>">
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <% } %>

    </div>
    </div>
    </div>
  </body>
</html>